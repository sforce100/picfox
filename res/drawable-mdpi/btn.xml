<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#708090" android:endColor="#708090"
                android:angle="270" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#EEE88A" android:endColor="#EEE88A"
                android:angle="270" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#87CEEB" android:endColor="#87CEEB"
                android:angle="270" />
            <stroke android:width="2dp" android:color="#fad3cf" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>

 

 

 

